{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "textra",
  "version": "0.1.0",
  "identifier": "xo.rs.textra",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "textra",
        "width": 800,
        "height": 600,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "transparent": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
